    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_ImageHolderLecture_list_item"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_lecture_list_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />


        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="158dp" />

        <TextView
            android:id="@+id/tv_title_lecture_list_item"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:padding="4dp"
            android:text="Passosync Analytics"
            android:textColor="#4C4B4B"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_date_lecture_list_item"


            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivDeleteLecture"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/deletelecture"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_date_lecture_list_item"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="start"
            android:padding="4dp"
            android:text="Nov 20, 2020"
            android:textColor="#979595"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/tv_lecture_list_item_type"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/tv_title_lecture_list_item" />

        <TextView
            android:id="@+id/tv_lecture_list_item_type"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/aldrich"
            android:gravity="start"
            android:padding="4dp"
            android:text="Bowling"
            android:textColor="#BD7100"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_description_lecture_list_item"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/tv_date_lecture_list_item" />

        <TextView
            android:id="@+id/tv_description_lecture_list_item"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/avenir"
            android:gravity="start"
            android:maxLines="3"

            android:text="The cover drive in cricket is the act of stroking the ball through the covers with well-timed wristwork and conventional movement of the front foot toward the pitch of a delivery aimed at or outside the off stump. The cover drive is considered one of the most graceful shots playable in the sport. Batsmen able to master the cover drive are usually given especially high praise because of the shot's difficulty in execution and its requirement for exquisite timing. When played to perfection, the cover drive comprises a batsman's seemingly effortless wielding of the blade in a downward trajectory through the off side, with the cricket ball gliding through infielders in the covers at pace toward the boundary at deep cover."
            android:textColor="#979595"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/viewLectureListItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_lecture_list_item_type" />


        <View
            android:id="@+id/viewLectureListItem"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#D3CECE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description_lecture_list_item" />

        <TextView
            android:id="@+id/lecture_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="50"
            android:gravity="center"
            android:padding="2dp"
            android:text="see details"
            android:fontFamily="@font/aldrich"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewLectureListItem" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/subs_circularIv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/subs_coachName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewLectureListItem" />

        <TextView
            android:id="@+id/subs_coachName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:text="Created By Coach Name"
            android:textSize="14dp"
            android:fontFamily="@font/avenir"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/subs_circularIv"
            app:layout_constraintTop_toBottomOf="@+id/viewLectureListItem" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleIvSpeciality"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:elevation="30dp"
        android:src="@drawable/profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_radio_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleIvSpeciality">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvSpecilaitySelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/avenir"
                android:text="Choose Your Speciality:-"
                android:textAlignment="viewStart"
                android:textColor="#424242"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/radioGroupProfileSpeciality"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />

            <RadioGroup
                android:id="@+id/radioGroupProfileSpeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSpecilaitySelector">

                <RadioButton
                    android:id="@+id/radio_batting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:checked="true"
                    android:drawableStart="@drawable/bat"
                    android:fontFamily="@font/avenir"
                    android:text="Batsman"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_bowling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:drawableStart="@drawable/ic_baseline_sports_baseball_24"
                    android:fontFamily="@font/avenir"
                    android:text="Bowler"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_all_rounder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:drawableStart="@drawable/field"
                    android:fontFamily="@font/avenir"
                    android:text="All Rounder"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_wicket_keeper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:drawableStart="@drawable/field"
                    android:fontFamily="@font/avenir"
                    android:text="Wicket Keeping"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radio_Fielding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:drawableStart="@drawable/field"
                    android:fontFamily="@font/avenir"
                    android:text="Fielding"
                    android:textSize="14sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/tvUploadKind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/aldrich"
                android:text="Update"
                android:textAlignment="viewEnd"
                android:textColor="@color/dark_orange"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroupProfileSpeciality"


                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
        <!--            app:layout_constraintTop_toBottomOf="@id/linear_coach_counter"-->

        <!--            app:strokeColor="@color/dark_orange"-->
        <!--            app:strokeWidth="2dp" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.FirstProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_first_profile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"

            android:src="@drawable/logocoach"
            app:layout_constraintBottom_toTopOf="@id/first_profile_editText_cardview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/first_profile_editText_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="24dp"
            android:layout_weight="80"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_first_profile">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Select your academy from below :-"
                        android:textColor="#454444"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_first_profile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/spinner_background"
                        android:backgroundTint="@color/dark_orange"
                        android:padding="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="Choose your speciality from below :-"
                        android:textColor="#454444"
                        android:fontFamily="@font/avenir"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:backgroundTint="#615F5F"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardPreventCornerOverlap="false"
                        >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"

                        android:layout_gravity="center"

                        app:cardCornerRadius="8dp"

                        >
                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"

                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/radioBat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/alignment_selector"
                                android:button="@drawable/radiobat48dp"
                                android:checked="true"
                                android:onClick="onAlignmentSelected" />

                            <RadioButton
                                android:id="@+id/radioBall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/alignment_selector"
                                android:button="@drawable/radioball48dp"
                                android:onClick="onAlignmentSelected" />

                            <RadioButton
                                android:id="@+id/radioFielding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/alignment_selector"
                                android:button="@drawable/radiofielding48dp"
                                android:onClick="onAlignmentSelected" />

                            <RadioButton
                                android:id="@+id/radioWicketKeeper"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/alignment_selector"
                                android:button="@drawable/radiowicket48dp"
                                android:onClick="onAlignmentSelected" />
                            <RadioButton
                                android:id="@+id/radioAllrounder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/alignment_selector"
                                android:button="@drawable/radioallrounder48dp"
                                android:onClick="onAlignmentSelected" />


                        </RadioGroup>
                    </androidx.cardview.widget.CardView>


                    </androidx.cardview.widget.CardView>







                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_update_name_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:textAlignment="textStart"
                        android:textColorHint="#7D7D7D"
                        app:errorEnabled="true"

                        app:startIconTint="@color/orange">

                        <EditText
                            android:id="@+id/first_update_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Name"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAlignment="textStart"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_update_email_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:textAlignment="textStart"
                        android:textColorHint="#7D7D7D"
                        app:errorEnabled="true"

                        app:startIconTint="@color/orange">

                        <EditText
                            android:id="@+id/first_update_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAlignment="textStart"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <Spinner
                            android:id="@+id/spinnerCountries"
                            android:layout_width="175dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="2dp"

                            android:paddingRight="10dp"
                            android:paddingBottom="2dp"
                            android:textAlignment="center" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/first_update_mobile_input"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#fff"
                            android:textAlignment="textStart"
                            android:textColorHint="#7D7D7D"
                            app:counterEnabled="true"
                            app:counterMaxLength="10"
                            app:errorEnabled="true"
                            app:startIconTint="@color/orange">

                            <EditText
                                android:id="@+id/first_update_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="Your mobile number"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAlignment="textStart"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_update_about_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:textAlignment="textStart"
                        android:textColorHint="#7D7D7D"
                        app:counterEnabled="true"
                        app:counterMaxLength="100"
                        app:errorEnabled="true"
                        app:startIconTint="@color/orange">

                        <EditText
                            android:id="@+id/et_first_update_about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="start|top"
                            android:hint="About yourself"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:maxLength="100"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:singleLine="true"


                            android:textAlignment="textStart"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_update_experience_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:textAlignment="textStart"
                        android:textColorHint="#7D7D7D"
                        app:errorEnabled="true"

                        app:startIconTint="@color/orange">

                        <EditText
                            android:id="@+id/first_update_experience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="Your Experience in Years"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAlignment="textStart"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <Button
        android:id="@+id/first_upload"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="4dp"
        android:layout_marginEnd="4dp"

        android:text="Save Details"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>